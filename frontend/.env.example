# Frontend Environment Variables

# Backend API URL
VITE_API_URL=http://localhost:4000

# Application Settings
VITE_APP_NAME=SAVETRAX 2.0
VITE_VERSION=2.0.0

# Video upload settings
VITE_MAX_FILE_SIZE=5368709120  # 5GB in bytes
VITE_UPLOAD_TIMEOUT=1800000    # 30 minutes in milliseconds

# UI Settings
VITE_DEFAULT_ZOOM=1
VITE_MAX_ZOOM=10
VITE_MIN_ZOOM=0.5
VITE_ZOOM_STEP=0.1

# Annotation Settings
VITE_MIN_RECT_SIZE=5
VITE_RECT_STROKE_WIDTH=2
VITE_RECT_COLORS_NORMAL=#818cf8
VITE_RECT_COLORS_SELECTED=#f43f5e
VITE_RECT_COLORS_DRAWING=#34d399

# Default classes for labeling
VITE_CLASSES=Auto,Bike,Bus,Car,LCV,Truck,NMV,MultiAxle,Pedestrian

# Development
VITE_DEBUG_MODE=false
VITE_LOG_NETWORK=false
